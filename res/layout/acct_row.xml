<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	
	<TextView android:id="@+id/Name" android:layout_width="wrap_content"
	 android:layout_height="wrap_content" android:text="'PLACEHOLDER'"
	 android:textSize="10pt" android:layout_toLeftOf="@+id/CurBal"
	 android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
	 android:inputType="text" />

	<TextView android:id="@id/CurBal" android:layout_width="wrap_content"
	 android:layout_height="wrap_content" android:text="'1,234.56'"
	 android:textSize="12pt" android:gravity="right"
	 android:layout_alignParentTop="true" android:layout_alignParentRight="true" />

	<TextView android:id="@+id/AvailBal" android:layout_width="wrap_content"
	 android:layout_height="wrap_content" android:text="'1,234,56'"
	 android:textSize="6pt" android:gravity="right"
	 android:layout_below="@id/Name" android:layout_toLeftOf="@id/CurBal" />
</RelativeLayout>
